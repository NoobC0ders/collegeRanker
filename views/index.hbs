    <!-- The Modal -->
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <span onclick="closeMOdal()" class="close">&times;</span>
            <form action="/login?back=home" method="POST">
                <p> Email: </p>
                <input class="modalEmail" type="email" required placeholder="yourname@email.com" name="email" id="">

                <button type="submit" class="modalsigninBtn">Sign In</button>
            </form>
        </div>

    </div>


    {{#if registration}}

    <div id="regModal" class="regModal">

        <div class="regModal-content">
            <p>
            <h2> Please Sign up! </h2>
            </p>
            <span onclick="closeregModal()" id="regclose" class="regclose">&times;</span>
            <form action="/register?back=home" method="POST">
                <p> Full Name: </p>
                <input class="modalEmail" required type="text" name="name" id="name" placeholder="your name">
                <p> Email: </p>
                <input class="modalEmail" type="email" name="email" id="" value={{email}} readonly>
                <p> Mobile: </p>
                <input class="modalEmail" required type="number" name="phone" id="mobile" placeholder="+91"
                    oninput="checkLength(this)">
                <p class="error" id="mobileErr"></p>
                <p> Address: </p>
                <textarea class="modalAddress" required type="address" name="address" placeholder="Address"></textarea>


                <button type="submit" id="regSubmit" class="regModalSubmitBtn">Register</button>
            </form>

        </div>

